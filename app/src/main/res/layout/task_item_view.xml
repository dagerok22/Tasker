<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/task_item_container"
    android:background="@drawable/task_item_background_shape"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:padding="10dp">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/OpenSansRegularPath"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/task_title_textview"
        android:layout_toStartOf="@+id/urgent_imageView"
        android:paddingEnd="5dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:textSize="15sp"
        android:textColor="@color/white"
        style="@style/OpenSansRegularPath"
        android:layout_below="@+id/task_title_textview"
        android:layout_alignParentStart="true"
        android:id="@+id/task_date_textview" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_fire"
        android:id="@+id/important_imageView"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_urgent_timer"
        android:id="@+id/urgent_imageView"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/important_imageView" />
</RelativeLayout>