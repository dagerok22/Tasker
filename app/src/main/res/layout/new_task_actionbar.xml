<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/new_task_actionbar"
    style="@style/NoShadowActionBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/new_task_back_btn"
            style="@style/CustomSizeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="7dp"
            android:paddingEnd="10dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingStart="0dp"
            android:paddingTop="7dp"
            fancy:fb_borderWidth="0dp"
            fancy:fb_defaultColor="?android:colorPrimary"
            fancy:fb_fontIconSize="30dp"
            fancy:fb_iconResource="@drawable/ic_002_left_arrow"
            fancy:fb_text=""
            fancy:fb_textColor="@color/colorPrimaryDark"
            fancy:fb_textGravity="center"
            fancy:fb_textSize="50dp" />


    </RelativeLayout>

</LinearLayout>