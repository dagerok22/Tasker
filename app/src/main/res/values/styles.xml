<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="elevation">0dp</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="OpenSansRegularPath" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
    </style>

    <style name="OpenSansLightPath" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/OpenSans-Light.ttf</item>
    </style>

    <style name="OpenSansLightItalicPath" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/OpenSans-LightItalic.ttf</item>
    </style>

    <style name="viewPagerTitleStrip">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="IntroMatrixText">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/OpenSansLightPath</item>
    </style>

    <style name="IntroMatrixDescriptionText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/OpenSansLightPath</item>
    </style>

    <style name="IntroThirdScreenQuote">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/OpenSansLightPath</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CustomSizeText" parent="@android:style/Widget.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textAppearance">@style/OpenSansLightPath</item>
    </style>

    <style name="nav_header_logo">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/OpenSansLightItalicPath</item>
    </style>

    <style name="NoShadowActionBar" parent="android:Theme.Holo.Light.Panel">
        <item name="android:windowContentOverlay">@null</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="add_new_task_hint_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/fadingGray</item>
    </style>
</resources>