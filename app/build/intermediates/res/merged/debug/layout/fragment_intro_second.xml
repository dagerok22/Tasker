<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sergey_suslov.tasker.IntroActivity$PlaceholderFragment"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                android:columnCount="2"
                android:rowCount="2">

                <RelativeLayout
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="2dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_width="97dp"
                    android:layout_height="97dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_urgent_timer"
                        android:id="@+id/imageView3"
                        android:layout_alignTop="@+id/imageView2"
                        android:layout_toEndOf="@+id/imageView2" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_fire"
                        android:id="@+id/imageView2"
                        android:clickable="false"
                        android:layout_marginStart="15dp"
                        android:layout_centerVertical="true"
                        android:layout_alignStart="@+id/intro_iu_text" />

                    <TextView
                        android:text="Improtant/Urgent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/IntroMatrixText"
                        android:id="@+id/intro_iu_text"
                        android:layout_below="@+id/imageView3"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="2dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_width="97dp"
                    android:layout_height="97dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_fire"
                        android:id="@+id/imageView4"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:text="Important"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/intro_i_text"
                        style="@style/IntroMatrixText"
                        android:layout_below="@+id/imageView4"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_width="97dp"
                    android:layout_height="97dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_urgent_timer"
                        android:id="@+id/imageView5"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:text="Urgent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/intro_u_text"
                        style="@style/IntroMatrixText"
                        android:layout_below="@+id/imageView5"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_width="97dp"
                    android:layout_height="97dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_circle_intro_nuni"
                        android:id="@+id/imageView6"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:text="Not important\nNot urgent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/intro_nuni_text"
                        style="@style/IntroMatrixText"
                        android:textAlignment="center"
                        android:layout_below="@+id/imageView6"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>

            </GridLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="50dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_fire"
                android:id="@+id/imageView7"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_urgent_timer"
                android:id="@+id/imageView8"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView7" />

            <TextView
                android:text="@string/intro_matrix_description_iu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/intro_improtant_urgent_textview"
                style="@style/IntroMatrixDescriptionText"
                android:layout_toEndOf="@+id/imageView8"
                android:paddingLeft="5dp" />

            <TextView
                android:text="@string/intro_matrix_description_i"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/intro_improtant_textview"
                style="@style/IntroMatrixDescriptionText"
                android:layout_below="@+id/intro_improtant_urgent_textview"
                android:layout_toEndOf="@+id/imageView9"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_fire"
                android:id="@+id/imageView9"
                android:layout_alignTop="@+id/intro_improtant_textview"
                android:layout_toStartOf="@+id/intro_improtant_urgent_textview" />

            <TextView
                android:text="@string/intro_matrix_description_u"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/intro_urgent_textview"
                style="@style/IntroMatrixDescriptionText"
                android:layout_below="@+id/intro_improtant_textview"
                android:layout_toEndOf="@+id/imageView10"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp" />

            <TextView
                android:text="@string/intro_matrix_description_ninu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/IntroMatrixDescriptionText"
                android:id="@+id/intro_nimprotant_nurgent_textview"
                android:layout_below="@+id/intro_urgent_textview"
                android:layout_toEndOf="@+id/imageView11"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_urgent_timer"
                android:id="@+id/imageView10"
                android:layout_alignTop="@+id/intro_urgent_textview"
                android:layout_toStartOf="@+id/intro_improtant_textview" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_circle_intro_nuni"
                android:id="@+id/imageView11"
                android:layout_alignTop="@+id/intro_nimprotant_nurgent_textview"
                android:layout_toStartOf="@+id/intro_urgent_textview" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_one_finger_swipe_left_gesture_outlined_hand_symbol"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/intro_swipe_icon" />

</RelativeLayout>
